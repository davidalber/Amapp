<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Asin</th>
   <th></th>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= link_to item.title, item %></td>
    <td><%= item.asin %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
